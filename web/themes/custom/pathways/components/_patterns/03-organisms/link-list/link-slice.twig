{# 
  template to show a div wrapped around plain text links
  Used in - landing page slices
 #}
{# Group/container bem #}
{% set group_base_class = group_base_class | default('') %}
{% set group_modifiers = group_modifiers | default(['']) %}
{% set group_classes = group_classes | default(['']) %}

<div{{bem(group_base_class,(group_modifiers),'',group_classes)}}>
{% include "@atoms/00-text/_heading.twig" with {
      "heading_level" : 3,
      "heading" : heading
  } %}
  {{links}}

</div>
