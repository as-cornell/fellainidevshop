/**
 * Output individual photoText
 Currently only used as a page-component. Might need to revisit
 if we wind up using this as a stand alone field somehwere.
#}

{% set link_url = content.field_link.0['#url']%}
{% set link_text = content.field_link.0['#title']%}
{% set base_class = 'photoText' %}
{% set classes = ['slide'] %}

{% embed "@molecules/content/photo-text/photo-text.twig" with {
    title: content.field_photo_text_title,
    text: content.field_formatted_text,
    img_src : img.uri | image_style('extra_large_square'),
    img_alt : img.alt,
    img_caption : img.caption,
    img_credit : img.credit,
    link: content.field_link,
    link_text: link_text,
    link_url: link_url
}%}{% endembed %}